{
  "private": true,
  "name": "vim-doge",
  "version": "3.1.2-beta.4",
  "description": "A Vim polyglot plugin for generating documentation",
  "scripts": {
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta",
    "prebuild": "rimraf dist",
    "watch": "tsc -p tsconfig.json --watch true --sourceMap",
    "build": "tsc -p tsconfig.json",
    "build:binary": "npm run prebuild && ncc build ./src/index.ts -m -o dist && ./scripts/build",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "bin": {
    "vim-doge": "./dist/index.js"
  },
  "pkg": {
    "assets": [
      "dist/build/Release/*.node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkoomen/vim-doge.git"
  },
  "bugs": {
    "url": "https://github.com/kkoomen/vim-doge/issues"
  },
  "homepage": "https://github.com/kkoomen/vim-doge#readme",
  "author": "Kim 金可明 <koomen@protonmail.com>",
  "license": "GPL-3.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "tree-sitter": "^0.17.0",
    "tree-sitter-bash": "^0.16.1",
    "tree-sitter-c": "^0.16.1",
    "tree-sitter-cpp": "^0.16.0",
    "tree-sitter-java": "^0.16.0",
    "tree-sitter-lua": "^1.6.1",
    "tree-sitter-php": "^0.16.2",
    "tree-sitter-python": "^0.16.1",
    "tree-sitter-ruby": "^0.16.2",
    "tree-sitter-typescript": "^0.16.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "@vercel/ncc": "^0.24.1",
    "conventional-changelog-cli": "^2.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "pkg": "^4.4.9",
    "prettier": "^2.1.2",
    "release-it": "^14.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
